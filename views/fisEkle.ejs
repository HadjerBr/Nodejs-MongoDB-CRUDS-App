                                            </td>


                                        </tr>
                                        <tr>
                                            <td class="genel">Sağlık</td>

                                            <td class="genel1" id="toplamS">
                                                <input type="number" name="toplamS">
                                            </td>
                                            <td id="stutar" class="genel1">
                                                <input type="number" name="stutar">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="genel">Gıda</td>

                                            <td class="genel1" id="toplamGid">
                                                <input type="number" name="toplamGid">
                                            </td>
                                            <td id="gidtutar" class="genel1">
                                                <input type="number" name="gidtutar">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="genel">Giyim</td>

                                            <td class="genel1" id="toplamGiy">
                                                <input type="number" name="toplamGiy">
                                            </td>
                                            <td id="giytutar" class="genel1">
                                                <input type="number" name="giytutar">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="genel">Kira</td>
                                            <td class="genel1" id="toplamK">
                                                <input type="number" name="toplamK">
                                            </td>
                                            <td id="ktutar" class="genel1">
                                                <input type="number" name="ktutar">
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>

                            </div>



                            </div>
                </form>
            </section>











